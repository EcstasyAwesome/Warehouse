<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ecstasyawesome.warehouse.controller.impl.TopBarController">
   <menus>
      <Menu mnemonicParsing="false" text="Main">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#showProfile" text="Profile" />
            <MenuItem mnemonicParsing="false" onAction="#showSettings" text="Settings" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Edit">
         <items>
            <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Navigation">
        <items>
          <MenuItem fx:id="homeItem" mnemonicParsing="false" onAction="#showHome" text="Home" />
            <MenuItem fx:id="userListItem" mnemonicParsing="false" onAction="#showUserList" text="User  list" />
            <MenuItem fx:id="productListItem" mnemonicParsing="false" onAction="#showProductList" text="Product list" />
            <MenuItem fx:id="productProviderListItem" mnemonicParsing="false" onAction="#showProductProviderList" text="Product provider list" />
            <MenuItem fx:id="productStorageListItem" mnemonicParsing="false" onAction="#showProductStorageList" text="Product storage list" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
         <items>
            <MenuItem mnemonicParsing="false" text="About" />
         </items>
      </Menu>
   </menus>
</MenuBar>
