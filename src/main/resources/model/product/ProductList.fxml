<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ecstasyawesome.warehouse.controller.product.ProductList">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" valignment="CENTER" vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" valignment="CENTER" vgrow="SOMETIMES" />
  </rowConstraints>
  <fx:include source="../TopBar.fxml" GridPane.rowIndex="0" />
   <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.rowIndex="1">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <content>
         <GridPane>
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints maxHeight="-Infinity" minHeight="40.0" prefHeight="40.0" />
             <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" />
               <RowConstraints vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <ToolBar prefHeight="40.0" prefWidth="200.0">
                 <items>
                     <Button mnemonicParsing="false" onAction="#addCategory" text="Add category" />
                     <Button mnemonicParsing="false" onAction="#deleteCategory" text="Delete category" />
                     <Separator orientation="VERTICAL" />
                     <Button mnemonicParsing="false" onAction="#addProduct" text="Add product" />
                     <Button mnemonicParsing="false" onAction="#deleteProduct" text="Delete product" />
                     <Separator orientation="VERTICAL" />
                     <Button mnemonicParsing="false" onAction="#refresh" text="Refresh" />
                 </items>
               </ToolBar>
               <ToolBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="1">
                  <items>
                     <TextField fx:id="searchField" onKeyTyped="#search" prefWidth="300.0" promptText="Search" />
                     <Button mnemonicParsing="false" onAction="#clear" text="Reset filters" />
                  </items>
               </ToolBar>
               <SplitPane dividerPositions="0.1" GridPane.rowIndex="2">
                 <items>
                     <ScrollPane fitToHeight="true" fitToWidth="true" minViewportWidth="150.0" prefViewportWidth="150.0" SplitPane.resizableWithParent="false">
                        <content>
                           <TableView fx:id="categoryTable" editable="true">
                              <columns>
                                 <TableColumn fx:id="categoryNameColumn" minWidth="150.0" onEditCommit="#editCategoryName" prefWidth="150.0" text="category" />
                              </columns>
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                           </TableView>
                        </content>
                     </ScrollPane>
                     <TableView fx:id="productTable" editable="true">
                        <columns>
                           <TableColumn fx:id="productIdColumn" maxWidth="50.0" minWidth="30.0" prefWidth="30.0" text="id" />
                           <TableColumn fx:id="productNameColumn" minWidth="200.0" onEditCommit="#editProductName" prefWidth="200.0" text="name" />
                           <TableColumn fx:id="productUnitColumn" minWidth="75.0" prefWidth="75.0" text="unit" />
                           <TableColumn fx:id="productCategoryColumn" minWidth="100.0" onEditCommit="#editProductCategory" prefWidth="100.0" text="category" />
                        </columns>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                     </TableView>
                 </items>
               </SplitPane>
            </children>
         </GridPane>
      </content>
   </ScrollPane>
</GridPane>
